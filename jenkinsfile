pipeline {
  agent none 
  environment {
    CI = 'true'
  }
  stages {
    stage('Checkout') {
      agent any
      steps {
        sh './jenkins/checkout.sh'
      }
    }
    stage('Develop Deploy') {
      agent any
      when {
        branch 'develop'
      }
      steps {
        sh './jenkins/devlopDeploy.sh'
      }
    }
    stage('Develop Deploy') {
      agent any
      when {
        branch 'master'
      }
      steps {
        sh './jenkins/productDeploy.sh'
      }
    }
  }
}
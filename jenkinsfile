pipeline {
  agent {
    docker {
      image 'node:8.9.3'
      arg '--rm -d --name "nodejs" -it -v $HOME:/home'
    }
  }
  environment {
    CI = 'true'
  }
  stages {
    stage('Build') {
      steps {
        sh 'npm install'
      }
    }
    stage('Test') {
      when {
        branch 'develop'
      }
      steps {
        sh 'dd'
        stash includes: '**', name: 'App'
      }
    }
    stage('Develop') {
      when {
        branch 'develop'
      }
      steps {
        echo 'Develop Environment'
      }
    }
  }
}